.NavBar
  background $palette-7
  margin 0
  padding 0
  list-style none
  color $palette-4
  @extend .VT323
  font-size $font-large
  text-transform uppercase

  display flex
  align-items center
  justify-content flex-end

  li
    padding 0

    button
      abbr
        display none

      @media screen and (max-width: 46rem)
        padding 0 0.35rem
        abbr
          display inline
        span
          display none

