.Shelf

  .main
    background $palette-7
    color $palette-2
    @extend .VT323
    font-size $font-large
    color $palette-3

    p
      margin 0

    ul
      list-style none
      padding 0
      margin-left 1.5rem
      margin-top 1.5rem
      display flex
      flex-wrap wrap
      
      li
        border solid $palette-6 2px
        border-radius 2px
        margin-right 1.5rem
        margin-bottom 1.5rem
        padding 0.5rem
        width calc(192px + 4px + 1rem)
        height calc(311px + 4px + 1rem)
        position relative

        img
          vertical-align bottom
          
        span
          z-index 10
          pointer-events none
          
        img.cover
          width 192px
          height @width
          image-rendering pixelated
          margin 0.5em 0

        img.background
          position absolute
          height 181px*1.14
          width 285px*1.14
          top 0
          left 0
          z-index 10
          transform rotate(90deg) translate(60px, 59px)
          opacity 0
          
        .title
          text-transform uppercase
          font-size $font-xlarge
          display inline-block
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
          width 100%
          text-align center
          color $palette-2

        .author
          display inline-block
          text-transform uppercase
          font-size $font-small
          color $palette-5
          text-align center
          width 100%
        
      li
        &:hover
          img.background
            opacity 1
          .title
            color $palette-1
            position absolute
            z-index 100
            transform rotate(90deg) translate(139px, -50px)
          .author
            position absolute
            z-index 100
            transform rotate(90deg) translate(149px, 237px)
            color $palette-4
