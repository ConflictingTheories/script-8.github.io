.Shelf

  .main
    background $palette-7
    color $palette-2
    @extend .VT323
    font-size $font-large
    color $palette-3

    p
      margin 0
      padding 1.5rem

    ul
      list-style none
      padding 0
      margin 0
      margin-bottom 1.5rem
      display flex
      flex-wrap wrap

      li
        padding 1.5rem
        padding-right 0
        padding-bottom 0
        .img
          cursor pointer
          width 1.5rem * 7
          height @width
          border solid $palette-6 2px
          &:hover
            border-color $palette-0
          img
            width 100%
            height @width
            vertical-align bottom
            image-rendering pixelated
