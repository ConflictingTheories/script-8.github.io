// TODO: clean up col/row arrangement

.Sprite

  .main
    grid-template-columns auto calc(128 * 3px + 3rem)
    grid-template-rows auto
    grid-row-gap 2px

    .SpriteEditor
      border-right solid $palette-6 2px
      color $palette-4
      padding 1.5rem
      text-transform uppercase
      display grid
      grid-template-columns calc(1.5rem * 8 + 4px) calc(1.5rem * 4 + 4px)
      grid-template-rows calc(1.5rem * 8 + 4px) 
      grid-column-gap 3rem
      grid-row-gap 1.5rem
      
      canvas
        display block
        image-rendering -moz-crisp-edges
        image-rendering pixelated
        // background red
        width calc(128px * 3 + 4px + 8px)
        grid-column 1 / span 2
        border solid $palette-6 2px
        padding 4px

    @media screen and (max-width: 880px)
      .SpriteEditor
        grid-column 1 / span 2
        border-right none
      .Output
        display none
        
    table
      border-collapse collapse
      table-layout fixed
      border solid $palette-6 2px

      td
        text-transform uppercase
        text-align center
        position relative
        padding 0
        button
          border none
          &:focus
            z-index 10
            position relative
          &.background-
            color $palette-6
            background none
          width 1.5rem
          height @width
          @extend .VT323
          font-size $font-large
          padding 0
          cursor pointer
          display block
          
      &.colors
        button
          margin 2px
          width calc(3rem - 4px)
          height @width
          border solid $palette-7 2px
        td.active
          background-color $palette-0
