.Output
  display none
  justify-content space-between
  align-items center
  background $palette-7
  position relative
  padding 1.5rem
  flex-direction column

  z-index 10
  padding 0
  position absolute
  width calc(100vmin - 3rem)
  height calc(100vmin - 3rem)
  max-width 40rem
  @media screen and (max-width: 26rem)
    width calc(100vmin)
    height calc(100vmin)

  button.play
    width 100%
    margin 0

  iframe
    border none
    width 100%

  .stats
    width 100%
    background $palette-6
    color $palette-3
