.Output
  display none
  justify-content space-between
  align-items center
  background $palette-7
  position relative
  padding 1.5rem
  flex-direction column

  z-index 10
  padding 0
  position absolute
  width calc(100vmin - 3rem)
  height calc(100vmin - 3rem)
  max-width 40rem
  @media screen and (max-width: 26rem)
    width calc(100vmin)
    height calc(100vmin)

  button.play
    width 100%
    margin 0

  iframe
    border none
    width 100%

  .stats
    width 100%
    @extend .VT323
    color $palette-5
    text-transform uppercase
    font-size $font-medium
    overflow hidden
    button
      font-size $font-medium
      padding 0
    li
      float left
      width 50%
      &:nth-child(even)
        text-align right
