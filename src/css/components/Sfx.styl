.Sfx
  height 100%
  display grid
  grid-template-columns minmax(auto, 51.5em) auto
  grid-template-rows $font-large auto
  grid-row-gap 2px
  background $palette-6

  .Menu
    grid-column 1 / span 1

  .NavBar
    grid-column 2 / span 1

  .temp
    grid-column 1 / span 2
    background $palette-7
    @extend .VT323
    font-size $font-large

    ul.bank
      color $palette-1
      list-style none
      padding 0
      margin 0
      li
        border solid $palette-6 4px
        &.active
          color $palette-0
          border-color $palette-1

