.Sfx
  height 100%
  display grid
  grid-template-columns minmax(auto, 51.5rem) auto
  grid-template-rows $font-large auto
  grid-row-gap 2px
  background $palette-6

  .Menu
    grid-column 1

  .NavBar
    grid-column 2

  .wrapper
    grid-column 1 / span 2
    background $palette-7
    @extend .VT323
    font-size $font-large
    padding 0.5rem

    .NotesPad
      display block
      width 768px
      height 384px
      image-rendering -moz-crisp-edges
      image-rendering pixelated
      background none

    .NotesInputs
      color $palette-1
      list-style none
      padding 0
      margin 0
      display flex

      li
        border solid $palette-6 3px
        border-right none
        &:last-child
          border-right solid $palette-6 3px
        padding 0.125rem 0
        width 3rem
        text-align center

