.Sfx
  height 100%
  display grid
  grid-template-columns minmax(auto, 51.5em) auto
  grid-template-rows $font-large auto
  grid-row-gap 2px
  background $palette-6

  .Menu
    grid-column 1

  .NavBar
    grid-column 2

  .wrapper
    grid-column 1 / span 2
    background $palette-7
    @extend .VT323
    font-size $font-large
    padding 0.5em

    .NotesPad
      margin 2rem 2rem
      display block
      width 400px
      height @width
      image-rendering -moz-crisp-edges
      image-rendering pixelated
      background none
