.Sfx
  height 100%
  display grid
  grid-template-columns minmax(auto, 51.5rem) auto
  grid-template-rows $font-large auto
  grid-row-gap 2px
  background $palette-6

  .Menu
    grid-column 1

  .NavBar
    grid-column 2

  .wrapper
    grid-column 1 / span 2
    background $palette-7
    @extend .VT323
    font-size $font-large
    padding 0.5rem
    display grid
    grid-template-columns auto auto
    grid-template-rows auto auto auto auto
    grid-row-gap 1rem
    grid-column-gap 1rem
    justify-content center
    
    .controls
      grid-column 1 / span 2
      button
        display block
        border solid $palette-6 3px
        width 100%
        // padding 0 1rem
      // border solid red 1px

    .title
      color $palette-6
      writing-mode vertical-lr
      text-orientation upright
      text-transform uppercase
      text-align center
      justify-self center

    ul.sfx-buttons
      display flex
      justify-content space-between
      margin 0
      padding 0
      list-style none

      li
        button
          border solid $palette-6 3px
          padding 0 1rem

    .NotesPad
      cursor pointer
      display block
      width 512px
      image-rendering -moz-crisp-edges
      image-rendering pixelated
      background none

    .NotesInputs
      color $palette-1
      list-style none
      padding 0
      margin 0
      display flex
      justify-content space-around
      width 100%

      li
        padding 0
        text-align center
        width 1.75rem

        button
          cursor default
          outline none
          padding 0
