.Song
  height 100%
  display grid
  grid-template-columns minmax(auto, 51.5rem) auto
  grid-template-rows $font-large auto
  grid-row-gap 2px
  background $palette-6

  .Menu
    grid-column 1

  .NavBar
    grid-column 2

  .main
    grid-column 1 / span 2
    background $palette-7
    @extend .VT323
    font-size $font-large
    display grid
    grid-template-columns auto 17*1.5rem
    grid-template-rows auto
    grid-row-gap 1.5rem
    grid-column-gap 3rem
    padding 1.5rem
    justify-content start

    .title
      text-transform uppercase
      color $palette-4
      margin-bottom 1.5rem
      height 1.5rem

    button.play
      display block
      width 100%
      border solid $palette-6 1px
      height 1.5rem
      margin-bottom 1.5rem

    table
      border-collapse collapse
      table-layout fixed
      margin-bottom 1.5rem

      td
        text-transform uppercase
        border solid $palette-6 1px
        width 1.5rem
        height 3rem
        text-align center
        position relative
        padding 0
        &.highlight
          background $palette-0
          button
            color $palette-7
        &:not(:first-child)
          &:hover
            border-style double
            border-color $palette-0
        &:first-child
          background none
          color $palette-4
          span
            writing-mode vertical-lr
            text-orientation upright
            text-align center
            justify-self center
            display block
        button
          overflow hidden
          cursor pointer
          @extend .VT323
          font-size $font-large
          border none
          position absolute
          width 1.5rem
          height 3rem
          display block
          top 0
          left -1px
          background none
          color $palette-1
          padding 0
          outline-offset -3px
          &:focus
            z-index 10
          span
            writing-mode vertical-lr
            text-orientation upright
            text-align center
            justify-self center
