.Menu
  margin 0
  padding 0
  list-style none
  background $palette-7
  display flex
  align-items center

  button
    padding 0 0.45em
    margin 0
    border none
    @extend .VT323
    text-transform uppercase
    font-size $font-large
    color $palette-3
    cursor pointer
    background none
    &.disabled
      color $palette-5

  a
    padding 0 0.45em
    color $palette-4
    @extend .VT323
    font-size $font-small
    text-transform uppercase
