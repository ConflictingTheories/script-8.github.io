*
  box-sizing border-box

$font-large = 1.5rem
$font-small = 1rem

@require 'utils/*.styl'
@require 'components/*.styl'

html
  background $palette-7

body
  margin 0
  padding 0
  overflow hidden

.App
  position absolute
  width 100%
  height 100%

a
  text-decoration none

button
  border none
  color $palette-2
  cursor pointer
  background none

  padding 0 0.5em
  margin 0

  @extend .VT323
  text-transform uppercase
  font-size $font-large

  &.active
    color $palette-1
    background $palette-6
