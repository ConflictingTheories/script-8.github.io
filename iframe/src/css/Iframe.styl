*
  margin 0
  padding 0
  box-sizing border-box

@require '../src/css/utils/fonts.styl'
@require '../src/css/utils/colors.styl'

html
  background $palette-7

body
  position absolute
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center

canvas
  display block
  image-rendering -moz-crisp-edges
  image-rendering pixelated

canvas.master
  width 100vw
  height 100vw

.button
  border none
  color $palette-5
  cursor pointer
  outline none
  padding 0 0.75rem
  margin 0
  @extend .VT323
  text-transform uppercase
  font-size $font-large
  &.active
    color $palette-1
  &:hover
    color $palette-0

button.play
  display block
  border solid $palette-6 1px
  height 1.5rem
  margin-bottom 1.5rem
  background none
  border none
  padding-left 0
  padding-right 0

input {
  width 100%
  display block
  margin 0.75rem 0
}

