*
  margin 0
  padding 0
  box-sizing border-box

@require '../src/css/utils/fonts.styl'
@require '../src/css/utils/colors.styl'

html
  background $palette-7
  // @extend .VT323

body
  position absolute
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center

canvas
  display block
  image-rendering -moz-crisp-edges
  image-rendering pixelated

canvas.master
  width 100vw
  height 100vw

